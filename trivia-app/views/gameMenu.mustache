<!DOCTYPE html>
<html>
<head>
    <title>Game</title>
    <link rel="stylesheet" type="text/css" href="css/GameMenu.css"></link>
    <h1>Bienvenido <h3 class="nombre">{{currentUser}}</h3></h1>
</head>
<body>
	<center>
		<h3 class="texto">Puntaje Actual:<h3 class="puntaje">{{score}}</h3></h3>
		<article>
		<div class="container">
			<h4 class="Error">{{msgError}}</h4>
			<form action="/gameMenu" method="POST">
				<input type="submit" name="typeOfGame" class="btn-default" value="1 Jugador"/>
				<input type="submit" name="typeOfGame" class="btn-default" value="2 Jugadores"/>
			</form>

			<form action="/continue" method="GET">
				<input type="submit" name="Reanudar" class="btn-default" value="Reanudar Partida"/>
			</form>

			<form action="/mainpage" method="GET">
					<input type="submit" name="Logout" class="btn-default1" value="Salir"/>
			</form>		
			<h3>{{textoInvitaciones}}</h3>
			<form action="/gameMenu" method="POST">	
				<input id="invitacion1" type="submit" name="invitacion" class="Invitacion" value={{Invitacion1}} />
				<input id="invitacion2" type="submit" name="invitacion" class="Invitacion" value={{Invitacion2}} />
				<input id="invitacion3" type="submit" name="invitacion" class="Invitacion" value={{Invitacion3}} />
			</form>
		</div>
		</article>	
	</center>
	<script type="text/javascript">
		if(document.getElementById("invitacion1").value=="/"){
			document.getElementById("invitacion1").style.display='none';
		}
		if(document.getElementById("invitacion2").value=="/"){
			document.getElementById("invitacion2").style.display='none';
		}
		if(document.getElementById("invitacion3").value=="/"){
			document.getElementById("invitacion3").style.display='none';
		}
	</script>
</body>
